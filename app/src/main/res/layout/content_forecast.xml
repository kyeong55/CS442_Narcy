<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme1_2"
    android:paddingTop="8dp"
    android:paddingBottom="12dp"
    tools:context="com.example.taegyeong.narcy.MainActivity"
    tools:showIn="@layout/content_main">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/forecast_day_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTheme1_4"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/forecast_icon_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="@dimen/forecast_padding_side"
            android:paddingLeft="@dimen/forecast_padding_side"
            android:tint="@color/colorTheme1_4"/>
        <TextView
            android:id="@+id/forecast_temp_low_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTempLow" />
        <TextView
            android:id="@+id/forecast_temp_high_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTempHigh" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/forecast_day_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTheme1_4"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/forecast_icon_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="@dimen/forecast_padding_side"
            android:paddingLeft="@dimen/forecast_padding_side"
            android:tint="@color/colorTheme1_4"/>
        <TextView
            android:id="@+id/forecast_temp_low_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTempLow" />
        <TextView
            android:id="@+id/forecast_temp_high_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTempHigh" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/forecast_day_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTheme1_4"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/forecast_icon_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="@dimen/forecast_padding_side"
            android:paddingLeft="@dimen/forecast_padding_side"
            android:tint="@color/colorTheme1_4"/>
        <TextView
            android:id="@+id/forecast_temp_low_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTempLow" />
        <TextView
            android:id="@+id/forecast_temp_high_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTempHigh" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/forecast_day_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTheme1_4"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/forecast_icon_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="@dimen/forecast_padding_side"
            android:paddingLeft="@dimen/forecast_padding_side"
            android:tint="@color/colorTheme1_4"/>
        <TextView
            android:id="@+id/forecast_temp_low_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTempLow" />
        <TextView
            android:id="@+id/forecast_temp_high_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTempHigh" />
    </LinearLayout>
</LinearLayout>